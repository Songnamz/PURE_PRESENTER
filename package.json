{
  "name": "churchhymnalapp",
  "version": "1.0.0",
  "description": "Pure Presenter - Presentation App",
  "main": "main.js",
  "scripts": {
    "start": "electron app/main.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:installer": "electron-builder --win nsis",
    "build:portable": "electron-builder --win portable",
    "package": "electron-packager . \"PURE PRESENTER\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=\"assets/PURE PRESENTER.ico\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Songnam Saraphai",
  "license": "ISC",
  "build": {
    "appId": "com.churchhymnal.app",
    "productName": "PURE PRESENTER",
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/PURE PRESENTER.ico",
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "PURE-PRESENTER-${version}-portable.exe",
      "unicode": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "PURE PRESENTER",
      "installerIcon": "assets/PURE PRESENTER.ico",
      "uninstallerIcon": "assets/PURE PRESENTER.ico",
      "artifactName": "PURE-PRESENTER-Setup-${version}.exe",
      "deleteAppDataOnUninstall": false,
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "menuCategory": true,
      "license": "LICENSE.txt",
      "include": "build/installer.nsh",
      "guid": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
    },
    "files": [
      "**/*",
      "!dist",
      "!.git",
      "!node_modules/electron-builder"
    ],
    "directories": {
      "output": "dist",
      "app": "."
    }
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "officeparser": "^5.2.1"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  }
}
